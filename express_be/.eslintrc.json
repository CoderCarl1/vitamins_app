{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"prettier",
		"plugin:prettier/recommended"
	],
	"plugins": ["prettier", "import"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true
	},
	"rules": {
		"prettier/prettier": 1,
		"no-unused-vars": [1, {
			"argsIgnorePattern": "res|next|^err"
		}],
		"no-unused-expressions": [2,
			{
				"allowTaggedTemplates": true,
				"allowTernary": true
			}
		],
		"func-names": 0,
		"indent": [2, 4],
		"prefer-const": ["error", {
			"destructuring": "all"
		}],
		"no-console": 1,
		"class-methods-use-this": 0
	}
}
